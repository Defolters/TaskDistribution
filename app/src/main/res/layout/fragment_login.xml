<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="loginModel"
            type="io.github.defolters.taskdistribution.presentation.login.model.LoginModel" />

        <variable
            name="presenter"
            type="io.github.defolters.taskdistribution.presentation.login.LoginContract.Presenter" />

    </data>

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.login.view.LoginFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{loginModel.username}" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:enabled="@{loginModel.enabled}"
            android:onClick="@{() -> presenter.login(loginModel)}" />

    </FrameLayout>

</layout>